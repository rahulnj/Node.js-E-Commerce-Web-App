<!-- ##### Shop Grid Area Start ##### -->
<section class="shop_grid_area section-padding-80">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-4 col-lg-3">
                <div class="shop_sidebar_area">




                    {{!-- <div class="widget color mb-50">
                        <!-- Widget Title 2 -->


                    </div> --}}

                    <!-- ##### Single Widget ##### -->
                    <div class="widget brands mb-50">
                        <!-- Widget Title 2 -->
                        <p class="widget-title2 mb-20">Catagories</p>
                        <ul>
                            <li><a style="cursor: pointer;" onclick="catpagination('kitten')">Kitten</a></li>
                            <li><a style="cursor: pointer;" onclick="catpagination('adult')">Adult</a></li>
                        </ul>




                    </div>
                </div>
            </div>

            <div class="col-12 col-md-8 col-lg-9">
                <div class="shop_grid_product_area">
                    <div class="row">
                        <div class="col-12">
                            <div class="product-topbar d-flex align-items-center justify-content-between">
                                <!-- Total Products -->

                            </div>
                        </div>
                    </div>
                    <div class="row" id="pagecatshow"></div>
                    <div class="row" id="pagecat">

                        <!-- Single Product -->
                        {{#each products}}
                        <div class="col-12 col-sm-6 col-lg-4">
                            <div class="single-product-wrapper">
                                <!-- Product Image -->
                                <div class="product-img">
                                    <div class="product-favourite">
                                        <button class="favme fa fa-heart btn btn-light p-2 float-right" type="button"
                                            style="border: none; background:rgb(255,255,255)"
                                            onclick="addtowishlist('{{this._id}}')"></button>
                                        {{!-- <a href="" onclick="addtowishlist('{{this._id}}')"
                                            class="favme fa fa-heart"></a> --}}
                                    </div>
                                    <img src="/uploads/image-1/{{this._id}}.jpg" alt=""
                                        style="height: 200px; width: 130px;">
                                    <!-- Hover Thumb -->
                                    {{!-- <img class="hover-img" src="/uploads/image-1/{{this._id}}.jpg" alt=""
                                        style="height: 190px; width: 130px;"> --}}

                                    <!-- Product Badge -->
                                    {{#if isoffer}}
                                    <div class="product-badge offer-badge">
                                        <span>-{{this.offer}}%</span>
                                    </div>
                                    {{else}}
                                    {{/if}}
                                    <!-- Favourite -->

                                </div>

                                <!-- Product Description -->
                                <div class="product-description">
                                    <span>paw paw</span>
                                    <a href="/single-product/{{this._id}}">
                                        <h6
                                            style=" display:inline-block;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;max-width: 28ch;">
                                            {{this.product}}</h6>
                                    </a>
                                    {{#if isoffer}}
                                    <p class="product-price"><span class="">₹ {{this.price}}</span>₹ {{this.offerprice}}
                                    </p>
                                    {{else}}
                                    <p class="product-price"><span class="old-price"></span>₹ {{this.price}}</p>
                                    {{/if}}
                                    <div class="p-1"><button type="button" onclick="addTobag('{{this._id}}')"
                                            class="btn btn-outline-danger btn-sm">Add to
                                            bag</button></a>
                                        <button type="button" onclick="buynow('{{this._id}}')"
                                            class="btn btn-outline-danger btn-sm">Buy Now</button>
                                    </div>
                                    <!-- Hover Content -->
                                    {{!-- <div class="hover-content row gx-2 container">
                                        <!-- Add to Cart -->
                                        <div class="add-to-cart-btn col">
                                            <a href="#" class="btn essence-btn">Add to Cart</a>
                                        </div>
                                        <div class="add-to-cart-btn col">
                                            <a href="#" class="btn essence-btn">Buy Now</a>
                                        </div>
                                    </div> --}}
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function catpagination(cat) {
        console.log(cat)
        let elem;
        $.ajax({
            url: '/paginationcat',
            data: {
                cat
            },
            method: 'post',
            success: (response) => {
                if (response.body) {
                    document.getElementById('pagecat').style.display = "none"
                    document.getElementById('pagecatshow').innerHTML = ""
                    for (i = 0; i <= response.body.length; i++) {
                        elem = `<div class="col-12 col-sm-6 col-lg-4">
                            <div class="single-product-wrapper">
                                <!-- Product Image -->
                                <div class="product-img">
                                    <div class="product-favourite">
                                        <button class="favme fa fa-heart btn btn-light p-2 float-right" type="button"
                                            style="border: none; background:rgb(255,255,255)"
                                            onclick="addtowishlist('${response.body[i]._id}')"></button>
                                        {{!-- <a href="" onclick="addtowishlist('${response.body[i]._id}')"
                                            class="favme fa fa-heart"></a> --}}
                                    </div>
                                    <img src="/uploads/image-1/${response.body[i]._id}.jpg" alt=""
                                        style="height: 200px; width: 130px;">
                                    <!-- Hover Thumb -->
                                    {{!-- <img class="hover-img" src="/uploads/image-1/${response.body[i]._id}.jpg" alt=""
                                        style="height: 190px; width: 130px;"> --}}

                                    <!-- Product Badge -->
                                    {{#if isoffer}}
                                    <div class="product-badge offer-badge">
                                        <span>-${response.body[i].offer}%</span>
                                    </div>
                                    {{else}}
                                    {{/if}}
                                    <!-- Favourite -->

                                </div>

                                <!-- Product Description -->
                                <div class="product-description">
                                    <span>paw paw</span>
                                    <a href="/single-product/${response.body[i]._id}">
                                        <h6
                                            style=" display:inline-block;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;max-width: 28ch;">
                                            ${response.body[i].product}</h6>
                                    </a>
                                    {{#if isoffer}}
                                    <p class="product-price"><span class="">₹ ${response.body[i].price}</span>₹ ${response.body[i].offerprice}
                                    </p>
                                    {{else}}
                                    <p class="product-price"><span class="old-price"></span>₹ ${response.body[i].price}</p>
                                    {{/if}}
                                    <div class="p-1"><button type="button" onclick="addTobag('${response.body[i]._id}')"
                                            class="btn btn-outline-danger btn-sm">Add to
                                            bag</button></a>
                                        <button type="button" onclick="buynow('${response.body[i]._id}')"
                                            class="btn btn-outline-danger btn-sm">Buy Now</button>
                                    </div>
                                    <!-- Hover Content -->
                                   
                                </div>
                            </div>
                        </div>`
                        document.getElementById('pagecatshow').innerHTML += elem


                    }
                } else {
                    Swal.fire("No matching product")
                }
            }
        })
    }
</script>