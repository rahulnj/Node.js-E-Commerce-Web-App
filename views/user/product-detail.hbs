<section class="single_product_details_area d-flex align-items-center">

    <!-- Single Product Thumb -->
    <div class="single_product_thumb clearfix">
        <div class="product_thumbnail_slides owl-carousel ">
            <img id="zoom" src="/uploads/image-2/{{product._id}}.jpg" alt=""
                data-zoom-image="/uploads/image-2/{{product._id}}.jpg">
            <img id="zoom1" src="/uploads/image-3/{{product._id}}.jpg" alt=""
                data-zoom-image="/uploads/image-3/{{product._id}}.jpg">
            <img id="zoom2" src="/uploads/image-4/{{product._id}}.jpg" alt=""
                data-zoom-image="/uploads/image-4/{{product._id}}.jpg">
            <img id="zoom3" src="/uploads/image-5/{{product._id}}.jpg" alt=""
                data-zoom-image="/uploads/image-5/{{product._id}}.jpg">
        </div>
    </div>

    <!-- Single Product Description -->
    <div class="single_product_desc clearfix">
        <span>PawPaw</span>
        <a href="#">
            <h2>{{product.product}}</h2>
        </a>
        {{#if product.isoffer}}
        <p class="product-price"><span class="old-price">₹ {{product.price}}</span>₹ {{product.offerprice}}</p>
        {{else}}
        <p class="product-price"><span class="old-price"></span>₹ {{product.price}}</p>
        {{/if}}
        <p class="product-desc">{{product.description}}</p>

        <!-- Form -->

        <!-- Select Box -->
        <div class="select-box d-flex mt-50 mb-30">
            {{!-- <form class="form-inline" id="couponapply-form">
                <div class="form-group mx-sm-3 mb-2">
                    <label for="inputPassword2" class="sr-only"></label>
                    <input type="text" class="form-control" id="coupon" placeholder="Coupon code">
                    <button type="submit" class=" essence-btn-sm ml-1 "> Apply</button>
                </div>
            </form> --}}
            {{!-- <select name="select" id="productSize" class="mr-5">
                <option value="value">Size: XL</option>
                <option value="value">Size: X</option>
                <option value="value">Size: M</option>
                <option value="value">Size: S</option>
            </select>
            <select name="select" id="productColor">
                <option value="value">Color: Black</option>
                <option value="value">Color: White</option>
                <option value="value">Color: Red</option>
                <option value="value">Color: Purple</option>
            </select> --}}
        </div>
        <!-- Cart & Favourite Box -->
        <div class="cart-fav-box d-flex align-items-center">
            <!-- Cart -->
            <div>
                {{#if alreadyAdded}}
                <a href="/mybag"> <button type="button" name="addtocart" value="5" class="btn essence-btn">Added to
                        bag</button></a>
                {{else}}
                <button type="button" name="addtocart" value="5" onclick="addTobag('{{product._id}}')"
                    class="btn essence-btn">Add to
                    bag</button>
                {{/if}}
                <button type="button" name="" value="5" onclick="buynow('{{product._id}}')" class="btn essence-btn">Buy
                    Now</button>

            </div>

            <!-- Favourite -->
            <div class="product-favourite ml-4">
                <a href="#" class="favme fa fa-heart"></a>
            </div>
        </div>

    </div>
</section>
