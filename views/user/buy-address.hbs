<section>

    <!-- ##### Breadcumb Area Start ##### -->
    <div class="breadcumb_area bg-img" style="background-image: url(img/bg-img/breadcumb.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="page-title text-center">
                        <h2>Address</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Breadcumb Area End ##### -->
    <div class="container-fluid container pl-3">
        <div class="p-2 float-right"> <button class="btn essence-btn"> <a href="/checkout">
                    < Back to Checkout</a> </button>
        </div>
        <div class="p-2"></div>
        <form id="buyaddressform">

            <input type="hidden" id="proId" name="proId" value="{{id}}">
            <div class="form-group">
                <label for="inputAddress">Full Name</label>
                <input type="text" name="fullname" class="form-control" id="nameadd">
                <p id="namerr" class="text-danger"></p>
            </div>
            <div class="form-group">
                <label for="inputAddress">Address</label>
                <input type="text" name="address" class="form-control" id="addressadd">
                <p id="adderr" class="text-danger"></p>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputCity">City</label>
                    <input type="text" name="city" class="form-control" id="cityadd">
                    <p id="cityerr" class="text-danger"></p>
                </div>

                <div class="form-group col-md-4">
                    <label for="inputState">Place</label>
                    <input type="text" name="place" class="form-control" id="placeadd">
                    <p id="placerr" class="text-danger"></p>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputZip">Pincode</label>
                    <input type="text" name="pincode" class="form-control" id="pinadd">
                    <p id="pinerr" class="text-danger"></p>
                </div>
                <div class="form-group col-md-2">
                    <label for="inputZip">Phone</label>
                    <input type="tel" name="phone" class="form-control" id="phoneadd">
                    <p id="phnerr" class="text-danger"></p>
                </div>
            </div>
            <button type="submit" class="btn essence-btn"> + Add</button>
            <p id="submit-message" class="text-danger"></p>
        </form>
    </div>



</section>

