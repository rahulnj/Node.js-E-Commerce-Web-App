<section class="content-main" style="max-width: 720px">

    <div class="content-header">
        <h2 class="content-title">Create product</h2>
        <div>
            <button class='btn btn-danger me-m-2' type='button'><a href="/admin/addproduct"
                    style="text-decoration: none; color:white">Discard</a></button>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form action="/admin/add-product" method="POST" enctype="multipart/form-data">

                <div class="mb-4">
                    <label for="product_name" class="form-label">Product Name</label>
                    <input type="text" name="product" placeholder="Type here" class="form-control" id="product_name">
                </div>
                <div class="mb-4">
                    <label class="form-label">Full description</label>
                    <textarea placeholder="Type here" name="description" class="form-control" rows="4"></textarea>
                </div>
                <div class="row gx-2">
                    <div class="col-sm-6 mb-3">
                        <label for="product_name" class="form-label">Category</label>
                        <select class="form-select" name="category" id="maincat">
                            <option id="dog" value="Dog"> Dog </option>
                            <option id="cat" value="Cat"> Cat </option>

                        </select>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label class="form-label">Sub category</label>
                        <select class="form-select" name="subcategory">
                            <option value="RetailandVet"> Retail and Vet products </option>
                            <option value="AccessoriesandGroom"> Accessories and Grooming </option>
                        </select>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label class="form-label">Type</label>
                        <select id="subtype" name="type" class="form-select">
                            <option id="subtype1"> Puppy </option>
                            <option id="subtype2"> Adult </option>
                        </select>
                    </div>
                </div> <!-- row.// -->
                <div class="row gx-2">
                    <div class="col-sm-6 mb-3">
                        <label class="form-label">Price</label>
                        <input placeholder="" type="text" name="price" class="form-control">
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label class="form-label">Qty</label>
                        <input placeholder="" name="quantity" type="text" class="form-control">
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-sm-6 mb-3">
                        <label class="form-label">Thumbnail</label>
                        <input name="img1" class="form-control" type="file">
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label class="form-label">Sub-Image #1</label>
                        <input name="img2" class="form-control" type="file">
                    </div>
                </div>
                <div class="row gx-2">
                    <div class="col-sm-6 mb-3">
                        <label class="form-label">Sub-Image #2</label>
                        <input name="img3" class="form-control" type="file">
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label class="form-label">Sub-Image #3</label>
                        <input name="img4" class="form-control" type="file">
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label class="form-label">Sub-Image #4</label>
                        <input name="img5" class="form-control" type="file">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div> <!-- card end// -->


</section> <!-- content-main end// -->

<script>
    document.getElementById('maincat').onchange = e => {
        if (e.target.value == "Dog") {
            document.getElementById('subtype1').innerHTML = "Puppy"
            document.getElementById('subtype1').value = "Puppy"
            document.getElementById('subtype2').innerHTML = "Adult"
            document.getElementById('subtype2').value = "Adult"

        } else if (e.target.value == "Cat") {
            document.getElementById('subtype1').innerHTML = "Kitten"
            document.getElementById('subtype1').value = "Kitten"
            document.getElementById('subtype2').innerHTML = "Adult"
            document.getElementById('subtype2').value = "Adult"


        }

    }
</script>