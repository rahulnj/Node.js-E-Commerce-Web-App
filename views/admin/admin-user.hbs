<section class="content-main">

    <div class="content-header">
        <h2 class="content-title">Users</h2>
        {{!-- <div>
            <a href="#" class="btn btn-primary"><i class="material-icons md-plus"></i> Create new</a>
        </div> --}}
    </div>

    <div class="card mb-4">
        <header class="card-header">
            <div class="row gx-3">
                <div class="col-lg-4 col-md-6 me-auto">
                    <input type="text" placeholder="Search..." class="form-control">
                </div>
            </div>
        </header> <!-- card-header end// -->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>

                            <th scope="col">Name</th>
                            <th scope="col">Email</th>

                            <th scope="col" class="text-end"> Action </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each newusers}}
                        <tr>

                            <td><b>{{this.username}}</b></td>
                            <td>{{this.mail}}</td>
                            <td class="text-end">
                                {{#if this.status}}
                                <button id="block" class='btn btn-danger btn-danger me-md-2' type='button'><a
                                        href="/admin/users/blockuser/{{this._id}}" data-toggle="modal"
                                        data-target="#exampleModalCenter"
                                        style="text-decoration: none; color:white">Block</a></button>
                                {{else}}
                                <button id="block" class='btn btn-danger btn-danger me-md-2' type='button'><a
                                        href="/admin/users/unblockuser/{{this._id}}" data-toggle="modal"
                                        data-target="#exampleModalCenter"
                                        style="text-decoration: none; color:white">Unblock</a></button>
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div> <!-- table-responsive //end -->
        </div> <!-- card-body end// -->
    </div> <!-- card end// -->


</section> <!-- content-main end// -->